int parsecondition(char input[],int cntr,char*dest,int totallen)
{
   int index=0,pos=0;
   while(input[cntr]!=(&& cntr<=totallen)
   cntr++;
   
   if(cntr>=totallen)
     return 0;
   index=cntr;
   
   while(input[cntr]!=')')
   cntr++;
   
   if(cntr>=totallen)
     return 0;
     
   while(inde<=cntr)
   dest+[pos++]=input[index++];
   dest[pos]='\0';
   return 0;
}


